<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.hidroluz.HidroluzWaterControl"
    android:versionCode="4"
    android:versionName="4">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_hidro"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:persistent="false"
        android:theme="@style/Theme.Temahidroluz"
        tools:replace="android:icon"      >
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Principal"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait" >
        </activity>
        <activity
            android:name=".Sair"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait" >
        </activity>
        <activity
            android:name=".GraficoValores"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".GraficoBarrasValores"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".GraficoConsumo"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".GraficoMedio"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".DadosLeitura"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait" >
        </activity>
         <activity
            android:name=".DrawerActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_drawer" >
        </activity>
        <activity
            android:name=".Noticias"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_noticias" >
        </activity>
        <activity
            android:name=".ListadeLeituras"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_listade_leituras" >
        </activity>
        <activity
            android:name=".Tela_erro"
            android:label="@string/title_activity_tela_erro" >
        </activity>
        <activity
            android:name=".Cadastro"
            android:label="@string/title_activity_cadastro"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".Cadastro_unidades"
            android:fitsSystemWindows="true"
            android:label="@string/title_activity_cadastro_unidades"
            android:windowSoftInputMode="adjustPan" />
              <activity
            android:name=".Login_ADM"
            android:label="@string/title_activity_login__adm" >
        </activity>
        <activity
            android:name=".Drawer_adm"
            android:label="@string/title_activity_login__adm" >
        </activity>
        <activity
            android:name=".Todas_as_leituras"
            android:label="@string/title_activity_todas_as_leituras" >
        </activity>
        <activity
            android:name=".Conta_Agua"
            android:label="@string/title_activity_conta__agua" >
        </activity>
        <activity
            android:name=".Escolha_unidade"
            android:label="@string/title_activity_escolha_unidade" >
        </activity>
        <activity
            android:name=".Cadastro_usuario"
            android:label="@string/title_activity_cadastro_usuario" >
        </activity>
        <activity
            android:name=".Codigo_confir"
            android:label="@string/title_activity_codigo_confir" >
        </activity>
        <activity
            android:name=".Esqueceu_senha"
            android:label="@string/title_activity_esqueceu_senha" >
        </activity>

        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>

    </application>

</manifest>